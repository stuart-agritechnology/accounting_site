// Generated to fix NextAuth CLIENT_FETCH_ERROR and persist payroll data.
// If you already have a prisma/schema.prisma, merge carefully.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// Timesheets + Jobs + Leave (mobile API v1)
// =========================

enum LeaveStatus {
  REQUESTED
  APPROVED
  REJECTED
  CANCELLED
}

enum TimesheetSubmissionStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
  SYNCED
}

model Job {
  id        String   @id @default(cuid())
  code      String
  name      String
  clientName String?
  active    Boolean  @default(true)

  // Where did this job come from?
  // - "FERGUS" now, later you can create "APP" jobs directly in Neon
  source    String   @default("FERGUS")
  externalId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  timeEntries TimeEntry[]

  @@unique([source, code])
  @@index([code])
  @@index([active])

  mobileTimeEntries MobileTimeEntry[]
}

model TimeEntry {
  id     String @id @default(cuid())
  userId String
  jobId  String

  // Store the real punch times (nearest minute)
  // Tip: keep these in UTC in the client, and store timezone separately for display.
  startAt  DateTime
  endAt    DateTime
  timezone String @default("Australia/Sydney")

  notes String?

  // Cached duration in minutes (validated server-side)
  minutes Int

  // Optional idempotency/external mapping if you import from Fergus later
  source     String @default("APP")
  externalId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  job  Job  @relation(fields: [jobId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([jobId])
  @@index([startAt])
}

model TimesheetSubmission {
  id     String @id @default(cuid())
  userId String

  fromDate DateTime
  toDate   DateTime

  status TimesheetSubmissionStatus @default(DRAFT)
  submittedAt DateTime?
  approvedAt  DateTime?
  syncedAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, fromDate, toDate])
  @@index([userId])
  @@index([fromDate, toDate])
}

model LeaveRequest {
  id     String @id @default(cuid())
  userId String

  type      String
  startDate DateTime
  endDate   DateTime

  // If you prefer day-based leave, store minutes/day.
  minutesPerDay Int? // optional

  notes  String?
  status LeaveStatus @default(REQUESTED)

  // Optional linkage to an external system later
  externalId String? @unique
  source     String  @default("APP")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([startDate, endDate])
  @@index([status])
}

model MobileRefreshToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}



model MobileTimeEntry {
  id       String   @id @default(cuid())
  userId   String
  jobId    String

  startAt  DateTime
  endAt    DateTime
  timezone String   @default("Australia/Sydney")

  // cached duration for fast reads
  minutes  Int
  notes    String?

  // workflow (draft until submitted/locked)
  status   String   @default("DRAFT") // DRAFT | SUBMITTED | LOCKED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  job  Job  @relation(fields: [jobId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([userId, startAt])
  @@index([jobId])
}

model MobileTimesheetSubmission {
  id          String   @id @default(cuid())
  userId      String

  periodStart DateTime
  periodEnd   DateTime

  status      String   @default("SUBMITTED") // SUBMITTED | APPROVED | SYNCED
  submittedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, periodStart, periodEnd])
  @@index([userId])
  @@index([periodStart])
  @@index([status])
}

model MobileLeaveRequest {
  id           String   @id @default(cuid())
  userId       String

  type         String
  startDate    DateTime
  endDate      DateTime
  minutesPerDay Int?
  notes        String?

  status       String   @default("REQUESTED") // REQUESTED | APPROVED | REJECTED | CANCELLED
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([startDate])
  @@index([status])
}

// -----------------
// NextAuth models
// -----------------
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // Credentials provider support
  passwordHash String?

  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  timeEntries TimeEntry[]
  timesheetSubmissions TimesheetSubmission[]
  leaveRequests LeaveRequest[]
  mobileRefreshTokens MobileRefreshToken[]
  payrollTimeEntries PayrollTimeEntry[]

  mobileTimeEntries MobileTimeEntry[]
  mobileTimesheetSubmissions MobileTimesheetSubmission[]
  mobileLeaveRequests MobileLeaveRequest[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// -----------------
// Example app model (T3 default)
// -----------------
model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// -----------------
// Payroll persistence
// -----------------
model PayrollJobRule {
  id           String   @id @default(cuid())
  jobCode      String   @unique
  rulesJson    Json
  updatedAtISO DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PayrollTimeEntry {
  id         String  @id @default(cuid())
  userId     String
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Idempotency key from upstream (Fergus). If you don't have one, hash fields in API.
  externalId String? @unique

  employeeName String
  jobCode      String
  startISO     DateTime
  endISO       DateTime
  minutes      Int
  notes       String?
  rawJson      Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([jobCode])
  @@index([employeeName])
  @@index([startISO])
  @@index([userId])
  @@index([userId, startISO])
}

model PayrollPayrun {
  id              String   @id @default(cuid())
  startISO        DateTime
  endISOExclusive DateTime
  computedAt      DateTime @default(now())

  // Snapshot inputs + outputs for reproducibility
  inputsJson  Json
  outputsJson Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  auditEvents PayrollAuditEvent[]

  @@index([startISO, endISOExclusive])
}

model PayrollAuditEvent {
  id        String   @id @default(cuid())
  type      String // e.g. XERO_PUSH
  createdAt DateTime @default(now())

  // Full in/out for audit
  requestJson  Json
  responseJson Json
  ok           Boolean @default(false)
  error        String?

  // Optional links
  payrunId String?
  payrun   PayrollPayrun? @relation(fields: [payrunId], references: [id], onDelete: SetNull)

  @@index([type])
  @@index([createdAt])
}

// -----------------
// Employee settings (app-owned)
// -----------------
model PayrollEmployee {
  id             String @id @default(cuid())
  xeroEmployeeId String @unique
  fullName       String

  // Base hourly rate used by payrun calc (copied from Xero for convenience)
  baseRate Float @default(0)

  // Office/salaried staff: do not require Fergus timesheets, no overtime calc
  noTimesheets Boolean @default(false)

  // Weekly ordinary hours (typically 38 or 40). Pulled from Xero where possible.
  weeklyHours Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([fullName])
}
